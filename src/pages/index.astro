---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

// Proyectos destacados para la página de inicio
const featuredProjects = [
  {
    title: "SmartCheck Costa Rica",
    description: "Sitio web profesional para empresa de inspección vehicular con optimización SEO y rendimiento excepcional.",
    tags: ["Astro", "JavaScript", "TailwindCSS"],
    image: "/images/projects/SmartCheck.png",
    color: "primary",
    link: "/proyectos/smartcheck"
  },
  {
    title: "Budget Tracker",
    description: "Aplicación web completa para gestión de finanzas personales con análisis avanzado y visualizaciones interactivas.",
    tags: ["Next.js", "TypeScript", "Tailwind CSS", "Prisma", "Clerk"],
    image: "/images/projects/BudgetTracker.png",
    color: "accent",
    link: "/proyectos/budget-tracker"
  }
];
---

<Layout 
  title="Randall Bonilla | Desarrollador de Software" 
  description="Portafolio profesional de Randall Bonilla, Ingeniero en Software especializado en crear soluciones web modernas y eficientes."
>
  <!-- Hero Section -->
  <section class="py-20 md:py-32 bg-gradient-to-br from-primary/10 via-background to-accent/5">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16">
        <div class="w-full md:w-1/2 order-2 md:order-1">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-primary mb-4">
            <span class="text-accent">Hola,</span> soy Randall Bonilla
          </h1>
          <p class="text-xl md:text-2xl mb-6">Desarrollador de Software</p>
          <p class="text-lg md:text-xl mb-8 leading-relaxed text-gray-700">
            Especializado en desarrollo web moderno con 
            <span class="text-primary font-medium">React</span>, 
            <span class="text-primary font-medium">TypeScript</span> y 
            <span class="text-primary font-semibold">Python</span>. 
            Me apasiona crear soluciones tecnológicas que impacten positivamente.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href="/proyectos" 
              class="px-6 py-3 bg-primary hover:bg-primary-dark text-white font-medium rounded-full transition-colors"
            >
              Ver proyectos
            </a>
            <a 
              href="/contacto" 
              class="px-6 py-3 border border-primary text-primary hover:bg-primary/5 font-medium rounded-full transition-colors"
            >
              Contactar
            </a>
          </div>
        </div>
        
        <div class="w-full md:w-1/2 order-1 md:order-2 flex justify-center">
          <div class="w-64 h-64 md:w-80 md:h-80 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center shadow-lg">
            <span class="text-white text-6xl md:text-8xl font-bold">RB</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ¿Qué hago? Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-center text-primary mb-16">¿Qué hago?</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
        <!-- Desarrollo Frontend -->
        <div class="bg-primary/5 rounded-lg p-6 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <path d="m10 20-7-7 7-7"></path>
              <path d="m14 4 7 7-7 7"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-3">Desarrollo Frontend</h3>
          <p class="text-gray-600">
            Creo interfaces modernas, responsivas y accesibles utilizando React, TypeScript y frameworks modernos como Next.js y Astro.
          </p>
        </div>
        
        <!-- Desarrollo Backend -->
        <div class="bg-accent/5 rounded-lg p-6 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
              <path d="M20 17.58A5 5 0 0 0 18 8h-1.26A8 8 0 1 0 4 16.25"></path>
              <path d="M8 16h.01"></path>
              <path d="M8 20h.01"></path>
              <path d="M12 18h.01"></path>
              <path d="M12 22h.01"></path>
              <path d="M16 16h.01"></path>
              <path d="M16 20h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-accent mb-3">Desarrollo Backend</h3>
          <p class="text-gray-600">
            Desarrollo APIs REST y servicios con Python (FastAPI), manejo bases de datos SQL y NoSQL, e implemento autenticación segura.
          </p>
        </div>
        
        <!-- UI/UX Design -->
        <div class="bg-primary/5 rounded-lg p-6 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
              <line x1="9" x2="9.01" y1="9" y2="9"></line>
              <line x1="15" x2="15.01" y1="9" y2="9"></line>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-3">UI/UX Design</h3>
          <p class="text-gray-600">
            Diseño interfaces de usuario centradas en la experiencia, con foco en la usabilidad, accesibilidad y estética moderna.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Python Journey Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-primary/5 to-accent/5">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="w-full md:w-1/2">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-6">Mi viaje con Python</h2>
          <p class="text-lg leading-relaxed text-gray-700 mb-6">
            Actualmente estoy profundizando mis conocimientos en <span class="text-primary font-semibold">Python</span>, un lenguaje versátil y potente que me permite crear soluciones robustas para el backend.
          </p>
          <p class="text-lg leading-relaxed text-gray-700 mb-6">
            Aunque todavía no tengo proyectos públicos con Python, estoy aprendiendo:
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Desarrollo de APIs con FastAPI y Django</span>
            </li>
            <li class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Análisis de datos con Pandas y NumPy</span>
            </li>
            <li class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Automatización y scripts para mejorar flujos de trabajo</span>
            </li>
          </ul>
          <p class="text-lg text-gray-700 italic">
            Pronto estaré añadiendo proyectos de Python a mi portafolio. ¡Mantente atento!
          </p>
        </div>
        <div class="w-full md:w-1/2 flex justify-center">
          <div class="bg-white p-6 rounded-xl shadow-lg max-w-md">
            <div class="flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-20 h-20 text-primary">
                <path fill="currentColor" d="M439.8 200.5c-7.7-30.9-22.3-54.2-53.4-54.2h-40.1v47.4c0 36.8-31.2 67.8-66.8 67.8H172.7c-29.2 0-53.4 25-53.4 54.3v101.8c0 29 25.2 46 53.4 54.3 33.8 9.9 66.3 11.7 106.8 0 26.9-7.8 53.4-23.5 53.4-54.3v-40.7H226.2v-13.6h160.2c31.1 0 42.6-21.7 53.4-54.2 11.2-33.5 10.7-65.7 0-108.6zM286.2 404c11.1 0 20.1 9.1 20.1 20.3 0 11.3-9 20.4-20.1 20.4-11 0-20.1-9.2-20.1-20.4.1-11.3 9.1-20.3 20.1-20.3zM167.8 248.1h106.8c29.7 0 53.4-24.5 53.4-54.3V91.9c0-29-24.4-50.7-53.4-55.6-35.8-5.9-74.7-5.6-106.8.1-45.2 8-53.4 24.7-53.4 55.6v40.7h106.9v13.6h-147c-31.1 0-58.3 18.7-66.8 54.2-9.8 40.7-10.2 66.1 0 108.6 7.6 31.6 25.7 54.2 56.8 54.2H101v-48.8c0-35.3 30.5-66.4 66.8-66.4zm-6.7-142.6c-11.1 0-20.1-9.1-20.1-20.3.1-11.3 9-20.4 20.1-20.4 11 0 20.1 9.2 20.1 20.4s-9 20.3-20.1 20.3z"/>
              </svg>
            </div>
            <div class="bg-gray-100 rounded-lg p-4 mb-4">
              <code class="text-primary">
                <pre class="text-sm overflow-x-auto">
def hello_world():
    print("¡Hola desde Python!")
    
    tools = ["FastAPI", "Django", "Pandas"]
    for i in range(len(tools)):
        print("Aprendiendo " + tools[i])
        
hello_world()
                </pre>
              </code>
            </div>
            <div class="text-center text-gray-600">
              <p>Expandiendo mis habilidades para crear soluciones más completas</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Proyectos Destacados -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-center text-primary mb-6">Proyectos Destacados</h2>
      <p class="text-xl text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Una selección de mis proyectos más recientes y relevantes.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {featuredProjects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a 
          href="/proyectos" 
          class="inline-flex items-center px-6 py-3 bg-primary hover:bg-primary-dark text-white font-medium rounded-full transition-colors"
        >
          Ver todos los proyectos
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Contacto Rápido -->
  <section class="py-16 md:py-24 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">¿Interesado en trabajar juntos?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
        Estoy disponible para proyectos freelance, colaboraciones y oportunidades laborales.
      </p>
      <a 
        href="/contacto" 
        class="inline-flex items-center px-8 py-4 bg-white text-primary hover:bg-gray-100 font-medium rounded-full transition-colors text-lg"
      >
        Contáctame
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>
